<UserControl x:Class="CalendarApp.Views.MainCalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <ComboBox Width="100" ItemsSource="{Binding Months}" SelectedItem="{Binding SelectedMonth}"/>
            <ComboBox Width="100" Margin="10,0" ItemsSource="{Binding Years}" SelectedItem="{Binding SelectedYear}"/>
            <Button Content="Load" Command="{Binding LoadCommand}" Margin="10,0"/>
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="10,0"/>
        </StackPanel>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding Days}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="7"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="1" Background="{Binding PriorityBrush}" Padding="4">
                        <StackPanel>
                            <TextBlock Text="{Binding Date.Day}" FontWeight="Bold"/>
                            <TextBox Text="{Binding Plan, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Text="{Binding Done, UpdateSourceTrigger=PropertyChanged}"/>
                            <ComboBox ItemsSource="{Binding DataContext.Priorities, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding Priority}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
